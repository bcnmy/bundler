{
  "env": {
      "browser": true,
      "es2021": true,
      "node": true
  },
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "project" : "./tsconfig.json"
  },
  "plugins": [
      "@typescript-eslint",
      "prettier"
  ],
  "rules": {
      "import/prefer-default-export": "off",
      "semi": ["error", "always"],
      "import/extensions": [
          "error",
          "ignorePackages",
          {
            "js": "never",
            "jsx": "never",
            "ts": "never",
            "tsx": "never"
          }
      ],
      "import/no-dynamic-require": 0,
      "no-underscore-dangle": "off",
      "no-restricted-syntax": "off",
      "comma-dangle": "off",
      "@typescript-eslint/comma-dangle": "off"
  },
  "ignorePatterns": ["**/*.hbs"]
}
